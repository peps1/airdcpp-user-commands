sudo: required
dist: bionic
language: node_js
node_js:
  - 13
  - 10
  - 8
before_install:
  # Update to the latest version as peer dependencies may cause issues otherwise
  - npm install npm -g
script:
  - npm run build
  - npm test
  - npm install codecov -g
notifications:
  email:
    on_failure: change
after_success:
  - codecov -f coverage/*.json
